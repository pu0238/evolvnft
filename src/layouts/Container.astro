---
import Main from "../layouts/Main.astro";
import Header from "../components/Header.vue";
import Menu from "../components/Menu.vue";
import MiddleCenteredHeader from "../components/MiddleCenteredHeader.vue";
import SecondSection from "../components/SecondSection.vue";
import ThirdSectionLeft from "../components/ThirdSectionLeft.vue";
import Footer from "../components/Footer.vue";
import MobileMenu from "../components/MobileMenu.vue";

const navItems = [
  { isComingSoon: false, content: "solution" },
  { isComingSoon: false, content: "use cases" },
  { isComingSoon: true, content: "launchpad" },
  //{ isComingSoon: true, content: "community" },
  { isComingSoon: false, content: "manager", href: "/collection-manager", isWalletStricted: true},
];

const leftNavItems = [
  { isComingSoon: false, content: "launchpad", href: "/launchpad" },
  { isComingSoon: true, content: "market" },
  { isComingSoon: true, content: "all collections" },
  { isComingSoon: true, content: "activity" },
  { isComingSoon: false, content: "community", href:"https://discord.gg/mugHDDzv", targetBlank: true},
];
const rightNavItems = [
  { isComingSoon: false, content: "create", href: "/create", isWalletStricted: true},
  { isComingSoon: false, content: "manage", href: "/collection-manager", isWalletStricted: true},
];

---

<Main
  title="EvolvNFT - evolving launchpad"
  lang="pl"
  description="Evolvnft is a decentralized token ranch and a place to create editable, levelable and evolving metadata for your decentralized assets!"
>
  <div class="container mx-auto">
    <div class="px-8 mx-auto lg:mb-16">
      <Menu class="my-8" client:visible leftNavItems={leftNavItems} rightNavItems={rightNavItems} />
      <slot />
    </div>
    <MobileMenu client:visible navItems={[...navItems, ...rightNavItems]} />
  </div>
  <Footer class="w-full float-left" />
</Main>
